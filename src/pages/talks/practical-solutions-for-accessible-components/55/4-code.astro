---
import SlidesLayout from "../../../../layouts/talks/practical-solutions-for-accessible-components.astro";
import ShellSlide from "../../../../components/Slide/ShellSlide.astro";
import { Code } from "astro:components";
import { words } from "../../../../functions/transformations";
---

<SlidesLayout title="Slide 55.4: Tabs HTML">
  <ShellSlide
    class="flex-wrap content-center gap-4"
    next-href="/talks/practical-solutions-for-accessible-components/55/5-code"
    next-label="Go to slide 55.5: Tabs HTML"
  >
    <Code
      slot="single"
      lang="html"
      transformers={words}
      meta='/role="tab"/'
      code={`
<h3>More about fruits</h3>

<div>
  <button type="button" role="tab">Apple</button>
  <button type="button" role="tab">Banana</button>
  <button type="button" role="tab">Grape</button>
</div>

<div>Eve, don't do it</div>
<div>Minion's favourite</div>
<div>Basically Wine</div>
`.trim()}
    />
  </ShellSlide>
</SlidesLayout>
