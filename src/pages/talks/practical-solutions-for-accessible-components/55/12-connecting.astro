---
import SlidesLayout from "../../../../layouts/talks/practical-solutions-for-accessible-components.astro";
import ShellSlide from "../../../../components/Slide/ShellSlide.astro";
import { Code } from "astro:components";
import { words } from "../../../../functions/transformations";
---

<SlidesLayout title="Slide 55.12: Tabs HTML">
  <ShellSlide
    class="flex-wrap content-center gap-4"
    next-href="/talks/practical-solutions-for-accessible-components/55/13-connecting"
    next-label="Go to slide 55.13: Tabs HTML"
  >
    <Code
      slot="single"
      lang="html"
      transformers={words}
      meta='/aria-labelledby="tab-a"/,/aria-labelledby="tab-b"/,/aria-labelledby="tab-g"/'
      code={`
<h3>More about fruits</h3>

<div role="tablist">
  <button id="tab-a" type="button" role="tab" aria-controls="tp-app">Apple</button>
  <button id="tab-b" type="button" role="tab" aria-controls="tp-ban">Banana</button>
  <button id="tab-g" type="button" role="tab" aria-controls="tp-gra">Grape</button>
</div>

<div role="tabpanel" id="tp-app" aria-labelledby="tab-a">Eve, don't do it</div>
<div role="tabpanel" id="tp-ban" aria-labelledby="tab-b">Minion's favourite</div>
<div role="tabpanel" id="tp-gra" aria-labelledby="tab-g">Basically Wine</div>
`.trim()}
    />
  </ShellSlide>
</SlidesLayout>
