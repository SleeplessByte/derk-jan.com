---
import { Image } from "astro:assets";
import SlidesLayout from "../../../../layouts/talks/practical-solutions-for-accessible-components.astro";

import rollingSrc from "../../../../talks/practical-solutions-for-accessible-components/rolling.jpg";

const nextHref = "/talks/practical-solutions-for-accessible-components/03/1";
const nextLabel = "Go to slide 3.1: Hello";
const className = "flex-wrap content-center";
---

<SlidesLayout title="Slide 3: Hello">
  <section class={`slide ${className}`} transition:name="slide">
    <div
      class="grid grid-cols-2 w-full h-full"
      style="grid-template-rows: auto minmax(0, 1fr) minmax(0, 1fr);"
    >
      <h2
        transition:name="title"
        class="col-span-full text-center !m-0 self-center justify-center py-4 lg:py-6 xl:text-7xl lg:text-6xl md:text-5xl sm:text-3xl text-lg font-bold"
      >
        Hello
      </h2>
      <div class="col-span-1 row-span-2"></div>
      <div class="col-span-1 row-span-1"></div>
      <div class="col-span-1 row-span-1"></div>
    </div>

    {
      nextHref ? (
        <footer class="controls" transition:name="next">
          <a
            rel="next"
            href={`${nextHref}#content`}
            class="group"
            data-astro-prefetch="load"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              role="img"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"
              />
              <title>{nextLabel}</title>
            </svg>
          </a>
        </footer>
      ) : null
    }
  </section>
</SlidesLayout>
