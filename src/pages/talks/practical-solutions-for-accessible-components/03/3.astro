---
import { Image } from "astro:assets";
import SlidesLayout from "../../../../layouts/talks/practical-solutions-for-accessible-components.astro";

import rollingSrc from "../../../../talks/practical-solutions-for-accessible-components/rolling.jpg";
import invalidSrc from "../../../../talks/practical-solutions-for-accessible-components/invalid-dark.jpg";

const nextHref = "/talks/practical-solutions-for-accessible-components/03/4";
const nextLabel = "Go to slide 3.4: Hello";
const className = "flex-wrap content-center";
---

<SlidesLayout title="Slide 3.3: Hello">
  <section class={`slide ${className}`} transition:name="slide">
    <div
      class="grid grid-cols-2 w-full h-full"
      style="grid-template-rows: auto minmax(0, 1fr) minmax(0, 1fr);"
    >
      <div class="pt-4 px-4 col-span-full">
        <h2
          transition:name="title"
          class="border-double border-4 rounded-lg border-zinc-300 dark:border-zinc-800 text-center !m-0 self-center justify-center py-4 lg:py-6 xl:text-7xl lg:text-6xl md:text-5xl sm:text-3xl text-lg font-bold"
        >
          Derk-Jan Karrenbeld
        </h2>
      </div>
      <div class="col-span-1 row-span-2 p-4">
        <Image
          src={rollingSrc}
          alt="Derk-Jan Karrenbeld rolling around"
          class="object-cover object-bottom !m-0 max-h-full max-w-full w-full h-auto rounded-lg"
        />
      </div>
      <div class="col-span-1 row-span-1 flex items-center justify-center">
        <div class="xl:text-5xl lg:text-4xl md:text-3xl sm:text-2xl text-md font-bold">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 98 96"
            height="80"
            class="!inline-block mr-2 xl:h-20 lg:h-16 md:h-14 sm:h-12 h-8 align-middle"
          >
            <path
              fill="#fff"
              fill-rule="evenodd"
              d="M48.854 0C21.839 0 0 22 0 49.217c0 21.756 13.993 40.172 33.405 46.69 2.427.49 3.316-1.059 3.316-2.362 0-1.141-.08-5.052-.08-9.127-13.59 2.934-16.42-5.867-16.42-5.867-2.184-5.704-5.42-7.17-5.42-7.17-4.448-3.015.324-3.015.324-3.015 4.934.326 7.523 5.052 7.523 5.052 4.367 7.496 11.404 5.378 14.235 4.074.404-3.178 1.699-5.378 3.074-6.6-10.839-1.141-22.243-5.378-22.243-24.283 0-5.378 1.94-9.778 5.014-13.2-.485-1.222-2.184-6.275.486-13.038 0 0 4.125-1.304 13.426 5.052a47 47 0 0 1 12.214-1.63c4.125 0 8.33.571 12.213 1.63 9.302-6.356 13.427-5.052 13.427-5.052 2.67 6.763.97 11.816.485 13.038 3.155 3.422 5.015 7.822 5.015 13.2 0 18.905-11.404 23.06-22.324 24.283 1.78 1.548 3.316 4.481 3.316 9.126 0 6.6-.08 11.897-.08 13.526 0 1.304.89 2.853 3.316 2.364 19.412-6.52 33.405-24.935 33.405-46.691C97.707 22 75.788 0 48.854 0"
              clip-rule="evenodd"></path>
          </svg>
          <span class="align-middle">SleeplessByte</span>
        </div>
      </div>
      <div class="col-span-1 row-span-1 p-4" transition:name="invalid">
        <Image
          src={invalidSrc}
          alt="Derk-Jan as name in a First name field with an error message 'First name is invalid'"
          class="object-contain object-center !m-0 max-h-full max-w-full w-full h-auto rounded-lg"
        />
      </div>
    </div>

    {
      nextHref ? (
        <footer class="controls" transition:name="next">
          <a
            rel="next"
            href={`${nextHref}#content`}
            class="group"
            data-astro-prefetch="load"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              role="img"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"
              />
              <title>{nextLabel}</title>
            </svg>
          </a>
        </footer>
      ) : null
    }
  </section>
</SlidesLayout>
