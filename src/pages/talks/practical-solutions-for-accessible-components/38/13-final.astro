  >
    <Code
      slot="single"
      lang="javascript"
      meta="{6}"
      transformers={lines}
      code={`
const component = document.getElementById('my-component');

function trapFocus(event) {
    if (component.contains(event.target)) return;

    // Re-focus inside our component...
}

document.addEventListener('focus', trapFocus, true);
      `.trim()}
    />
  </CodeSlide>
