      slot="single"
      lang="javascript"
      code={`
// Re-focus inside our component...     (simplified)
function focusFirst(element) {
  for (const child of element.children) {
    if (attemptFocus(child) || focusFirst(child)) {
      return true;
    }
  }

  return false
}
      `.trim()}
    />
  </CodeSlide>
