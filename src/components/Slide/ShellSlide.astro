---
type Props = {
  class?: string;
  "shell:transition-name"?: string;
  "shell:hidden"?: boolean;
  "result:transition-name"?: string;
  "result:hidden"?: boolean;
} & (
  | { "next-href"?: undefined; "next-label"?: undefined }
  | {
      "next-href": string;
      "next-label": string;
    }
);

const {
  class: className = "",
  "next-href": nextHref,
  "next-label": nextLabel,
  "shell:transition-name": shellTransitionName = "shell",
  "shell:hidden": shellHidden = false,
  "result:transition-name": resultTransitionName = "result",
  "result:hidden": resultHidden = false,
} = Astro.props;
---

<section class={`slide --shell ${className}`} transition:name="slide">
  <div transition:name="code" class="grid">
    <div
      class={`grid-cell ${shellHidden ? "hidden" : ""}`}
      transition:name={shellTransitionName}
    >
      <slot name="shell" />
    </div>

    <div class="grid-cell">
      <slot name="single" transition:name="single">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-6 self-center justify-self-center"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="m4.5 5.25 7.5 7.5 7.5-7.5m-15 6 7.5 7.5 7.5-7.5"></path>
        </svg>
      </slot>
    </div>

    <div
      class={`grid-cell ${resultHidden ? "hidden" : ""}`}
      transition:name={resultTransitionName}
    >
      <slot name="result" />
    </div>
  </div>

  {
    nextHref ? (
      <footer class="controls" transition:name="next">
        <a
          rel="next"
          href={`${nextHref}#content`}
          class="group"
          data-astro-prefetch="load"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            role="img"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"
            />
            <title>{nextLabel}</title>
          </svg>
        </a>
      </footer>
    ) : null
  }
</section>
