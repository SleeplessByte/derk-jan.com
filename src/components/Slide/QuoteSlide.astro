---
type Props = { "cite:href": string; cite: string } & (
  | { "next-href"?: undefined; "next-label"?: undefined }
  | {
      "next-href": string;
      "next-label": string;
    }
);

const {
  "next-href": nextHref,
  "next-label": nextLabel,
  "cite:href": citeHref,
  cite,
} = Astro.props;
---

<section class="slide --quote" transition:name="slide">
  <div>
    <h2 transition:name="title">
      <slot name="title" />
    </h2>

    <figure class="!m-0 py-6">
      <blockquote cite={citeHref} class="">
        <slot name="quote" />
      </blockquote>
      <cite class="opacity-65">&mdash; <a target="_blank" href={citeHref}>{cite}</a></cite
      >
    </figure>
  </div>

  {
    nextHref ? (
      <footer class="controls" transition:name="next">
        <a rel="next" href={nextHref} class="group" data-astro-prefetch="load">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            role="img"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"
            />
            <title>{nextLabel}</title>
          </svg>
        </a>
      </footer>
    ) : null
  }
</section>
